[
  {
    "id": "pull-webhook",
    "execute-command": "/var/www/webhooks/scripts/pull",
    "pass-arguments-to-command": [
      {
        "source": "payload",
        "name": "data.project"
      }
    ],
    "trigger-rule": {
      "and": [
        {
          "match":
          {
            "type": "payload-hash-sha1",
            "secret": "mysecret",
            "parameter":
            {
              "source": "header",
              "name": "X-Hub-Signature"
            }
          }
        },
        {
          "match":
          {
            "type": "value",
            "value": "tag",
            "parameter":
            {
              "source": "payload",
              "name": "ref_type"
            }
          }
        }
      ]
    }
  },
  {
    "id": "restart-webhook",
    "execute-command": "/var/www/webhooks/scripts/restart",
    "pass-arguments-to-command": [
      {
        "source": "payload",
        "name": "data.service"
      }
    ],
    "trigger-rule": {
      "and": [
        {
          "match":
          {
            "type": "payload-hash-sha1",
            "secret": "mysecret",
            "parameter":
            {
              "source": "header",
              "name": "X-Hub-Signature"
            }
          }
        },
        {
          "match":
          {
            "type": "value",
            "value": "tag",
            "parameter":
            {
              "source": "payload",
              "name": "ref_type"
            }
          }
        }
      ]
    }
  }
]